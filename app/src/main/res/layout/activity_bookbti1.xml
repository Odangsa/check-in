<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white">

    <!-- 상단바 추가? -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="책크인"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/navy"
        android:drawableLeft="@drawable/icon_bookmark_checked"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:drawableLeft="@drawable/icon_back"
        android:layout_marginLeft="25dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:drawableLeft="@drawable/icon_one"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:text="책을 읽는 가장 큰 이유는 무엇인가요?"
            android:textSize="33dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="@color/navy"
            tools:ignore="RtlCompat"></TextView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_round_gray_stroke"
            android:text="새로운 지식을 얻기 위해"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_round_gray_stroke"
            android:text="휴식과 스트레스 해소를 위해"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_next"
            android:background="@color/transparent"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"></ImageButton>

    </LinearLayout>

    <!-- navbar로 변경 예정 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

</LinearLayout>