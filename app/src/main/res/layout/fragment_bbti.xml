<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Start View -->
    <LinearLayout
        android:id="@+id/startView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="책크인"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:drawableLeft="@drawable/icon_bookmark_checked"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:src="@drawable/img_bookbti_main"
            android:scaleType="centerCrop"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:text="나의 북BTI는?"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/navy"
                android:layout_marginLeft="25dp"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="북BTI를 기반으로 한 책 추천 서비스"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0.5"
            android:text="시작하기 →"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>
    </LinearLayout>

    <!-- Question View -->
    <LinearLayout
        android:id="@+id/questionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="책크인"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:drawableLeft="@drawable/icon_bookmark_checked"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:background="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="25dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/questionNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_one"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:textColor="@color/navy"/>

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="33dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/option1Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:textColor="@color/navy"
                android:textStyle="bold"
                android:background="@drawable/btn_round_gray_stroke"/>

            <Button
                android:id="@+id/option2Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.2"
                android:background="@drawable/btn_round_gray_stroke"
                android:textColor="@color/navy"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Result View -->
    <LinearLayout
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center|left"
            android:text="책크인"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:drawableLeft="@drawable/icon_bookmark_checked"
            android:drawableRight="@drawable/icon_notifications"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"></TextView>

        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/img_bookbti_tmp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <TextView
            android:id="@+id/resultTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_bookmark"/>
            <TextView
                android:id="@+id/resultDescription1TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textSize="15dp"
                android:textColor="@color/gray_dark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_bookmark"/>
            <TextView
                android:id="@+id/resultDescription2TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textSize="15dp"
                android:textColor="@color/gray_dark"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>